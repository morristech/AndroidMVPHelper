<?xml version="1.0" encoding="utf-8"?>
<com.ufkoku.demo_app.ui.view.DataView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dataView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/retainable"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Retainable"/>

        <Button
            android:id="@+id/savable"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Savable"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <include
        android:id="@+id/waitView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="94dp"
        layout="@layout/app_wait_view" />

</com.ufkoku.demo_app.ui.view.DataView>