<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ufkoku.demo_app">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:name=".DemoApp"
        android:theme="@style/AppTheme">

        <activity android:name=".ui.StartActivity" android:label="Start">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".ui.activity.static_list.StaticListActivity" android:label="Savable"/>

        <activity android:name=".ui.fragments.FragmentsActivity" android:label="Fragments"/>

    </application>

</manifest>
